<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Blooso.AppShell"
       xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Blooso.Views;assembly=Blooso"
       Title="Blooso">
    <Shell.Resources>
        <ResourceDictionary>
            <!--#region Styles-->
            <Style x:Key="StandardStyle"
                   TargetType="Element">
                <Setter Property="Shell.BackgroundColor"
                        Value="{StaticResource BaseOrange}" />
                <Setter Property="Shell.ForegroundColor"
                        Value="White" />
                <Setter Property="Shell.TitleColor"
                        Value="White" />
                <Setter Property="Shell.DisabledColor"
                        Value="#B4FFFFFF" />
                <Setter Property="Shell.UnselectedColor"
                        Value="#95FFFFFF" />
                <Setter Property="Shell.TabBarBackgroundColor"
                        Value="{StaticResource LighterOrange}" />
                <Setter Property="Shell.TabBarForegroundColor"
                        Value="White" />
                <Setter Property="Shell.TabBarUnselectedColor"
                        Value="#95FFFFFF" />
                <Setter Property="Shell.TabBarTitleColor"
                        Value="White" />
                <!--#endregion-->
            </Style>
            <!--#region FlyoutItemStyles-->
            <Style Class="FlyoutItemLabelStyle"
                   TargetType="Label">
                <Setter Property="TextColor"
                        Value="Black" />
            </Style>
            <Style ApplyToDerivedTypes="True"
                   Class="FlyoutItemLayoutStyle"
                   TargetType="Layout">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor"
                                            Value="{x:OnPlatform UWP={StaticResource BaseOrange}, iOS=White}" />
                                    <Setter TargetName="FlyoutItemLabel"
                                            Property="Label.TextColor"
                                            Value="{StaticResource BleakOrange}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Selected">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor"
                                            Value="{StaticResource BleakOrange}" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            <!--#endregion-->
        </ResourceDictionary>
    </Shell.Resources>
    <TabBar>
        <ShellContent Title="Profile"
                      Icon="icon_about.png"
                      Route="AboutPage"
                      ContentTemplate="{DataTemplate local:MainMenuPage}" />
        <ShellContent Title="Friendlist"
                      Icon="icon_feed.png"
                      ContentTemplate="{DataTemplate local:FriendlistPage}" />
        <ShellContent Title="Messages"
                      Icon="icon_feed.png"
                      ContentTemplate="{DataTemplate local:MatchOverviewPage}" />
    </TabBar>

    <!--
        If you would like to navigate to this content you can do so by calling
        await Shell.Current.GoToAsync("//LoginPage");
    -->
    <TabBar>
        <ShellContent Route="LoginPage"
                      ContentTemplate="{DataTemplate local:MainMenuPage}" />
    </TabBar>
    <!--<FlyoutItem Title="MainMenu">
        <ShellContent ContentTemplate="{DataTemplate local:MainMenuPage}"
                      Route="MainMenuPage" />
    </FlyoutItem>
    <TabBar>
        <ShellContent Route="MainMenuPage" ContentTemplate="{DataTemplate local:MainMenuPage}" />
    </TabBar>-->
</Shell>