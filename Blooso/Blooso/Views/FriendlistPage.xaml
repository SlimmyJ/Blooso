<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:vm="clr-namespace:Blooso.ViewModels"
             x:Class="Blooso.Views.FriendlistPage">

    <ContentPage.BindingContext>
        <vm:FriendlistViewModel/>
    </ContentPage.BindingContext>

    <RefreshView Command="{Binding LoadUsersCommand}"
                 IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
        <CollectionView x:Name="UserCollectionView"
                        ItemsSource="{Binding FriendList}"
                        SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding Sex}" />
                        <Label Text="{Binding DateOfBirth}" />
                        <Label Text="{Binding IsInfected}" />
                        <Label Text="{Binding IsVaccinated}" />

                        <!--Code to act on user gestures -->
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer
                                        NumberOfTapsRequired="1"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FriendlistViewModel}},Path=ItemTappedCommand}"
                                        CommandParameter="{Binding .}">
                                <!--CommandParameter is used to pass an object with the command. "." is used to select the root, in this case, the whole object-->
                            </TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>