<ContentPage x:Class="Blooso.Views.MainMenuPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Blooso.ViewModels;assembly=Blooso">
    <ContentPage.BindingContext>
        <viewModels:MainMenuViewModel />
    </ContentPage.BindingContext>
    <RefreshView>
        <StackLayout BackgroundColor="{StaticResource WhiteFill}">
            <Grid Margin="0,20,0,0"
                  ColumnDefinitions="*,*"
                  RowDefinitions="*,*">
                <Button Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        Command="{Binding LoadUsersCommand}"
                        HorizontalOptions="Center"
                        Text="Edit Profile"
                        VerticalOptions="Center" />
                <Button Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        Command="{Binding LoadUsersCommand}"
                        HorizontalOptions="Center"
                        Text="Find matches!"
                        VerticalOptions="Center" />
                <Label Grid.Row=" 0"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Margin="5"
                       FontSize="Large"
                       HorizontalTextAlignment="Center"
                       Text="{Binding CurrentUser.Name}" />
            </Grid>
        </StackLayout>
    </RefreshView>
</ContentPage>