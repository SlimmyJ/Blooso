<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Blooso.Views.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Blooso.Controls;assembly=Blooso"
    xmlns:vm="clr-namespace:Blooso.ViewModels">
    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout
            Padding="20"
            BackgroundColor="{StaticResource WhiteFill}"
            Orientation="Vertical"
            Spacing="20"
            VerticalOptions="Center">
            <StackLayout Spacing="0">
                <Image Margin="20" Source="templogoblooso.png" />
                <!--#region Region User ID-->
                <NeoFrame
                    Padding="0,25,0,0"
                    BackgroundColor="{StaticResource BleakOrange}"
                    CornerRadius="20,20,20,20">
                    <StackLayout HorizontalOptions="Center">
                        <Label
                            Padding="25"
                            HorizontalTextAlignment="Center"
                            Text="User ID"
                            VerticalOptions="Center" />
                        <controls:BorderlessEntry
                            x:Name="EntryUserLogin"
                            FontSize="Small"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Keyboard="Numeric"
                            PlaceholderColor="DimGray"
                            Text="{Binding Id}"
                            TextColor="DimGray"
                            TranslationY="-15"
                            WidthRequest="200" />
                    </StackLayout>
                </NeoFrame>
                <!--#endregion-->
                <!--#region Region User Password-->
                <NeoFrame
                    Padding="0,25,0,0"
                    BackgroundColor="{StaticResource BleakOrange}"
                    CornerRadius="20,20,20,20">
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label
                            Padding="25"
                            HorizontalTextAlignment="Center"
                            Text="Password"
                            VerticalOptions="Center" />
                        <controls:BorderlessEntry
                            x:Name="EntryUserPassword"
                            FontSize="Small"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            IsPassword="True"
                            Placeholder="Enter password"
                            PlaceholderColor="DimGray"
                            Text="{Binding Password}"
                            TranslationY="-15"
                            VerticalOptions="Center"
                            VerticalTextAlignment="Center"
                            WidthRequest="200" />
                    </StackLayout>
                </NeoFrame>
                <!--#endregion-->
            </StackLayout>
            <NeoButton
                BackgroundColor="{StaticResource AccentBlue}"
                Command="{Binding SubmitCommand}"
                CornerRadius="20"
                Elevation=".25">
                <StackLayout
                    Padding="25"
                    HorizontalOptions="Center"
                    Orientation="Vertical"
                    VerticalOptions="Center">
                    <Label
                        FontSize="Large"
                        Text="Login"
                        TextColor="White"
                        VerticalOptions="EndAndExpand" />
                </StackLayout>
            </NeoButton>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>