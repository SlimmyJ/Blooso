<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Blooso.Views.EditProfile.EditActivityListPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:Blooso.ViewModels;assembly=Blooso">
    <ContentPage.BindingContext>
        <viewModels:EditActivityListViewModel />
    </ContentPage.BindingContext>
    <StackLayout>
        <StackLayout Padding="10,20" BackgroundColor="#ededed">
            <Label FontAttributes="None" Text="Let us match you up with people that like the same activities. Add more to your profile to make better connections." />
        </StackLayout>
        <!--  Users chosen activities  -->
        <StackLayout Margin="0,40,0,0">
            <Label
                Padding="20,5"
                BackgroundColor="#ededed"
                FontAttributes="Italic"
                HorizontalOptions="Center"
                Text="Your favorite activities" />
            <FlexLayout
                Padding="10"
                BindableLayout.ItemsSource="{Binding UserActivities}"
                JustifyContent="SpaceEvenly"
                Wrap="Wrap">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Padding="10"
                            BorderColor="LightSlateGray"
                            CornerRadius="25">
                            <Label FontSize="12" Text="{Binding}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:EditActivityListViewModel}}, Path=DeleteActivityFromListCommand}"
                                        CommandParameter="{Binding .}"
                                        NumberOfTapsRequired="1" />
                                </Label.GestureRecognizers>
                            </Label>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </StackLayout>
        <!--  All activities  -->
        <StackLayout Margin="0,0,0,80" VerticalOptions="EndAndExpand">
            <Label
                Padding="20,5"
                BackgroundColor="#ededed"
                FontAttributes="Italic"
                HorizontalOptions="Center"
                Text="All activities" />
            <FlexLayout
                Padding="10"
                BindableLayout.ItemsSource="{Binding Activities}"
                JustifyContent="SpaceEvenly"
                Wrap="Wrap">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Padding="10"
                            BorderColor="LightSlateGray"
                            CornerRadius="25">
                            <Label FontSize="12" Text="{Binding}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:EditActivityListViewModel}}, Path=AddToActivityListCommand}"
                                        CommandParameter="{Binding .}"
                                        NumberOfTapsRequired="1" />
                                </Label.GestureRecognizers>
                            </Label>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </StackLayout>
    </StackLayout>
</ContentPage>