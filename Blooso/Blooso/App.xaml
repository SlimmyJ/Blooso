<?xml version="1.0" encoding="utf-8" ?>
<Application x:Class="Blooso.App"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!--
        Define global resources and styles here, that apply to all pages in your app.
    -->
    <Application.Resources>
        <ResourceDictionary>
            <!--#region Colors-->
            <Color x:Key="WhiteFill">#FFFFFF</Color>
            <Color x:Key="BaseOrange">#ff8c42</Color>
            <Color x:Key="DarkerOrange">#c65d11</Color>
            <Color x:Key="LighterOrange">#ffbd70</Color>
            <Color x:Key="BleakOrange">#F9C784</Color>
            <Color x:Key="AccentBlue">#4E598C</Color>
            <Color x:Key="TextBlack">Black</Color>
            <Color x:Key="CollectionViewColor">#80ffbd20</Color>
            <!--#endregion-->
            <!--#region Buttons-->
            <Style TargetType="CollectionView">
                <Setter Property="BackgroundColor"
                        Value="{StaticResource BleakOrange}" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="FontAttributes"
                        Value="Bold" />
                <Setter Property="TextColor"
                        Value="DimGray" />
            </Style>
            <Style x:Key="StlDefaultLabel"
                   TargetType="Label">
                <Setter Property="TextColor"
                        Value="Black" />
            </Style>
            <Style x:Key="StlContactBtn"
                   TargetType="Button">
                <Setter Property="TranslationY"
                        Value="-50" />
                <Setter Property="TranslationX"
                        Value="45" />
                <Setter Property="BackgroundColor"
                        Value="{StaticResource AccentBlue}" />
                <Setter Property="WidthRequest"
                        Value="56" />
                <Setter Property="HeightRequest"
                        Value="56" />
                <Setter Property="CornerRadius"
                        Value="28" />
            </Style>
            <Style x:Key="StlBoardTitle"
                   TargetType="Label">
                <Setter Property="Padding"
                        Value="0,30,0,5" />
                <Setter Property="TextColor"
                        Value="#a5a2a2" />
                <Setter Property="FontSize"
                        Value="16" />
                <Setter Property="HorizontalOptions"
                        Value="Center" />
            </Style>
            <Style x:Key="StlBoardDesc"
                   TargetType="Label">
                <Setter Property="FontAttributes"
                        Value="Bold" />
                <Setter Property="FontSize"
                        Value="16" />
                <Setter Property="HorizontalOptions"
                        Value="Center" />
            </Style>
            <Style x:Key="StlMainFrame"
                   TargetType="Frame">
                <Setter Property="TranslationY"
                        Value="{OnPlatform iOS='-150', Android='-33'}" />
                <Setter Property="HeightRequest"
                        Value="{OnPlatform Android='228'}" />
                <Setter Property="HasShadow"
                        Value="False" />
            </Style>
            <Style x:Key="StlProfilePicture"
                   TargetType="ImageButton" />
            <!--#endregion-->
        </ResourceDictionary>
    </Application.Resources>
</Application>